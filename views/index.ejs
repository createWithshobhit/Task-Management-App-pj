<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900 p-10">
        <!-- Form to create a new task -->
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block px-5 py-2 w-full rounded-md outline-none bg-zinc-800 text-white" 
                       type="text" placeholder="Title goes here" name="title" required>
                <textarea class="block px-5 py-2 w-full rounded-md outline-none mt-2 resize-none bg-zinc-800 text-white" 
                          placeholder="Write your task details here" name="details" required></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md transform hover:scale-110 transition-transform duration-200 cursor-pointer" type="submit" value="Create Task">
            </form>
        </div>

        <!-- Task List -->
        <div class="tasks p-10 flex flex-wrap gap-4">
            <% if (files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task w-70 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-2xl tracking-tighter"><%= val %></h1>
                        <a class="text-blue-500 inline-block mt-3" href="/file/<%= val %>">Read More</a>
                        <form action="/task/<%= val %>?_method=DELETE" method="POST" class="inline">
                            <button type="submit" class="text-red-400 bg-green-900 rounded px-5 py-1 inline-block m-5  transform hover:scale-110 transition-transform duration-200" mt-2 hover:underline">Delete</button>
                        </form>
                        <a href="/edit/<%= val %>" class=" text-yellow-500 bg-green-900 rounded px-5 py-1 inline-block m-5  transform hover:scale-110 transition-transform duration-200">Edit</a>
                        
                    </div>
                <% }) %>
            <% } else { %>
                <h1 class="text-white text-2xl tracking-tighter">No tasks available</h1>
            <% } %>
        </div>
    </div>
</body>
</html>
